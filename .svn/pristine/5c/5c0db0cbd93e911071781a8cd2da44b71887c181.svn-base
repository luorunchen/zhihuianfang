.AlarmBox
{
    position:absolute;
    top:90px;
    right:10px;
    width:300px;
    color: #fff;
    background: url(../images/kjbg.png);
    border: solid 1px #fff;
    box-shadow:inset 0px 0px 30px #fff;
    border-radius: 7px;
}
.AlarmBox   .AlarmTitle
{
    font-size:16px;
    height:40px;
    line-height:40px;
    padding-left:20px;
    border-bottom:solid 1px #248ef4;
}

.AlarmBox   .AlarmTitle .moreAlarm
{
    position:absolute;
    top:0px;
    right:15px;
    cursor:pointer;
    font-size:16px;
}
 .AlarmBox   .AlarmResult
   {
        max-height:400px;
        overflow-y:auto;
        min-height:300px;
   }

     .AlarmBox   .AlarmResult .alarmItem
     {
          border-bottom: solid 1px #5dacd3;
          cursor:pointer;
     }
      .AlarmBox   .AlarmResult .alarmItem:hover
     {
         background-color:#057681;
         color:#01e3e7;

     }
     .AlarmBox   .AlarmResult .resultTitle
     {
        font-size:14px;
        padding-top:5px;
        padding-bottom:5px;
        padding-left:20px;
     }
       .AlarmBox   .AlarmResult .resultText
     {
        font-size:12px;
        padding-bottom:5px;
        padding-left:20px;
     }
     

       /*����ͼ��*/
       .chartBox
       {

            position:absolute;
            bottom:10px;
            right:10px;
            width:40px;
            height:250px;
            color: #fff;
            background: url(../images/kjbg.png);
            border: solid 1px #5dacd3;
            box-shadow:inset 0px 0px 30px #5dacd3;
            border-radius: 7px;
       }
       .chartBody
       {
           display:none;
           width:100%;
           height:100%;
           position:relative;
       }

       .chartLabel
       {
           width:100%;
           height:100%;
           padding:10px;
           font-size:16px;
           cursor:pointer;
           padding-top:30px;
       }

        .chartBut
       {
          display:none;
          position:absolute;
          left:10px;
          top:10px;
          color:#ffffff;
          font-size:20px;
          cursor:pointer;
       }


       .chartBoxShow
       {
           width:auto;
           left:400px;
       }

       .chartBoxShow .chartBody
       {
           display:block;
       } 
        .chartBoxShow .chartLabel
       {
           display:none;
       }
         .chartBoxShow .chartBut
       {
           display:block;
       }
         
