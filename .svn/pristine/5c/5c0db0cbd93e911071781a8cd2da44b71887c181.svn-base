html
{
    width:100%;
    height:100%;
    margin:0px;
    padding:0px;
}
/*������ʽ*/
body {
  
    width:100%;
    height:100%;
    font-size:13px;
    overflow:hidden;
    font-family:'Microsoft YaHei';
    scrollbar-face-color: #b46868;
      background-color:#191919;
}
a {
  cursor: pointer;
}
a:hover,
a:focus {
  text-decoration: none;
}

 ::-webkit-scrollbar-track
{
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	background-color: #49768d;
}

::-webkit-scrollbar
{
	width: 10px;
    height:10px;
	background-color: #55a1c5;
}

::-webkit-scrollbar-thumb
{
	background-color: #55a1c5;
}


 .focusBox {
    
       background-image:url(../images/focus.png);
        animation-name: scaleout;
        animation-duration: 1.5s;
        animation-timing-function: ease-in-out;
        animation-iteration-count: infinite;
          width:64px;
          height:64px;
      }

@keyframes scaleout {
    0% {
        transform: scale(0.2);
        opacity: 1;
    }

    100% {
        transform: scale(2.0);
        opacity: 0;
    }
}

.form-control{

   background-color:#262626;
   border:solid 1px #248ef4;
   color:#fff;
}

.form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
    opacity:0.5;
    background-color:#466a7c;
}

.bodyBox
{
    position:relative;
   height:100%;
    width:100%;
    margin-left:auto;
    margin-right:auto;
}

.MapBox
{
    position:absolute;
    top:0px;
    left:0px;
    right:0px;
    bottom:00px;
    width:auto;
    height:auto;
}

.leftBox
{
    position:absolute;
    top:90px;
    left:10px;
    width:250px;
    bottom:0px;
    overflow-y:auto;
}

    .HeadBox {
    position:absolute;
    left:0px;
    top:0px;
    right:0px;
    height:80px;
    overflow:hidden;
    background: url('img/titlebg.png') repeat-x;
}

.HeadBox .WebTitle
{
    width:100%;
    text-align:center;
    background-size:contain;
    color:#fff;
    line-height:80px;
    font-size:30px;
}

.HeadBox  .webTitle{
     font-size:30px;
     line-height:70px;
    color:#fff;
    text-align:center;
}

.HeadBox .navBack {
    height:50px;
    position:absolute;
    left:10px;
    top:13px;
}

.HeadBox .navBack .backImg
{
    width:50px;
    height:50px;
    margin-left:10px;
    float:left;
    background: url('../images/backImg.png') no-repeat center center;
    background-size:50px 50px;
