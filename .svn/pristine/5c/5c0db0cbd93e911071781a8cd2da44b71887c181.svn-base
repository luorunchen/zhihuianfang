.numBox {
    color: #fff;
    background: url(../images/kjbg.png);
    border: solid 1px #fff;
    box-shadow:inset 0px 0px 30px #fff;
    border-radius: 7px;
    padding-bottom: 10px;
    padding-left: 10px;
    padding-right:10px;
  
}
.numBox .numTitle
{

    font-size:16px;
    height:40px;
    line-height:40px;

}
.numBox .numContent
{
    width:100%;
    height:40px;
}
.numBox .numContent .numCell
{
    float:left;
    width:30px;
    text-align:center;
    font-size:20px;
    line-height:35px;
    background-color:#248ef4;
    margin-left:5px;
} 
.numBox .numItem
{
    height:40px;
    line-height:40px;
    border: solid 1px #248ef4;
    margin-top:10px;
    padding-left:15px;
    padding-right:15px;
    border-radius:5px;
    cursor:pointer;

}

.numBox .numItem{
  background: url(../images/m_l.png) no-repeat right;
  background-size: 4%;
}
.numBox .numItem .valueCell
{
    float:right;
    height:40px;
    line-height:40px;
}



.queryToolBar
{
    height:50px;
    padding:10px;
    padding-left:5px;
    line-height:40px;
    position:relative;
}

.queryToolBar .queryText{
    width:160px;
    display:inline;
}
.queryToolBar .queryBut {
    position:absolute;
    right:0px;
    top:13px;
}

