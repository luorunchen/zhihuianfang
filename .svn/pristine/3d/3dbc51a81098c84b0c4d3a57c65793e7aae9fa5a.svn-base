html, body {
    width:100%;
    height:100%;
    font-family:'Microsoft YaHei';
}

.elecDeviceBox
{
    position:absolute;
    left:0px;
    right:0px;
    top:120px;
    
}
.elecWeekBox
{

    position:absolute;
    left:0px;
    right:0px;
    bottom:0px;
    height:100px;
    overflow-x:auto;
    overflow-y:hidden;

}

.elecBox {
    position: absolute;
    width:310px;
    height:100%;
    overflow-y:auto;
    padding:10px;
    

}


.elecNoText {

    margin-top:40px;
    margin-left:auto;
    margin-right:auto;
    font-size:20px;
}

    .elecBox .elecItem {
        width:270px;
        height:155px;
        overflow-y:hidden;
        text-align:center;
        border:solid 1px #ccc;
        float:left;
        margin-left:10px;
        margin-top:10px;
        border-radius:5px;
        display:table;
        cursor:pointer;
    }
   

     .elecBox .elecPic {

         width:80px;
         height:80px;
         text-align:center;
         margin-top:30px;
         margin-left:10px;
         cursor:pointer;
         float:left;
    } 

    .elecBox .elecNormal {
        background-image:url(../images/ygnormal.png);  /* 绿*/
         background-position:center center;
         background-size:cover;
    } 
   .elecBox .elecOff {
         background-image:url(../images/ygoffline.png); /* 灰*/
           background-position:center center;
         background-size:cover;
    } 
   .elecBox .elecAlarm {
         background-image:url(../images/ygalarm.png); /*红*/ 
           background-position:center center;
         background-size:cover;
    } 
      .elecBox .SiDiOnline {
         background-image:url(../images/SiDi_lv.png);
           background-position:center center;
         background-size:cover;
    } 
  .elecBox .SiDiOffline{
         background-image:url(../images/SiDi_hui.png);
           background-position:center center;
         background-size:cover;
    } 
    .elecBox .SiDiNormal {
         background-image:url(../images/SiDi_lan.png);
           background-position:center center;
         background-size:cover;
    } 
      .elecBox .SiDiAbnormal {
         background-image:url(../images/SiDi_hong.png);
           background-position:center center;
         background-size:cover;
    } 
   .elecBox .elecContent
   {
       overflow-y:hidden;
       padding-right:5px;
       display:table-cell;
       vertical-align:middle;

   }

    .elecBox .elecTitle {
       width:100%;
       text-align:left;
       font-size:14px;
       padding-bottom:2px;
    }
      .elecBox .leftTitle {
       float:left;
     
    }
        .elecBox .rightTitle {
       float:right;
       
    }
      .elecBox .lineTitle {
         overflow:hidden;
    }
      .elecBox .elecAbout1{
          text-align:center;
          margin-left:auto;
          margin-right:auto;
          width:1024px;
          height:700px;
            background-image:url(../images/elec1.jpg);
           background-position:center center;
         background-size:cover;
      }
        .elecBox .elecAbout2{
          margin-top:10px;
          text-align:center;
          margin-left:auto;
          margin-right:auto;
          width:1024px;
          height:700px;
          background-image:url(../images/elec1.jpg);
          background-position:center center;
          background-size:cover;
      }

        .elecWeekScroll
        {
            height:100%;
            overflow:hidden;
              white-space:nowrap;
        }

        .weekReportItem
        {
            border:solid 1px #ccc;
            float:left;
            margin-left:10px;
            border-radius:3px;
            cursor:pointer;
            width:220px;
            height:80px;
            font-size:14px;
            padding-top:10px;
            white-space:nowrap;
        }

         .weekReportItem .lineText
         {
            text-align:center;
            height:30px;
            line-height:30px;
         }


         .deviceAlarmBox
         {
             width:400px;
             height:400px;
             overflow-y:auto;
             border: solid 1px #5dacd3;
         }

           .deviceAlarmBox  .deviceAlarmItem
           {
               border-bottom: solid 1px #5dacd3;
           }
            .deviceAlarmBox  .deviceResultTitle
           {
               line-height:30px;
               font-size:16px;
           }

           .deviceAlarmBox  .deviceResultText
           {
              line-height:25px;
               font-size:14px;
           }