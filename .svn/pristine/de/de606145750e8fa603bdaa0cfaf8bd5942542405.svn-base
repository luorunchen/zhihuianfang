            var watchtotal=result.DevData[0].longitude;
          //  console.log(watchtotal);
            sessionStorage.setItem('watchtotal',watchtotal);
            var html='';
            $.each(data,function(i,v){
                html="<h3>"+v.typeName+"<br>"+v.alarmFaultDate+"</h3>";
            })

            $('.waterDevideTitle').html(html);

            var sum=result.Data;
           // console.log(sum);
            var typename=data[0].typeName;
            // console.log(typename);  水压 or 液位(水位)
            if(dSid=='4'){
               LoadWater2(1);
               $('#container').show();
              $('#fillgauge1').hide();
            }else{
               LoadWater1(1);
               $('#container').hide();
               $('#fillgauge1').show();
            }
            var dd1=[];
            $.each(sum,function(i,v){
                dd1.push([v.time,parseFloat(v.latitude)]);
            })
           // console.log(dd1);
            Highcharts.setOptions({
                colors: ['#178BCA']
            });
            $('#divChart').highcharts({
                chart: {
                   type: '',
                },
                title: {
                    text: '设备最近数据分析',
                },
                xAxis: {
                    reversed: true,
                    categories: [ ]
                },
                yAxis: [{
                    title: {
                        text: ''
                    },
                    min:0
                }],
                plotOptions: {
                    column: {
                        pointWidth:20,
                        dataLabels: {
                            enabled: true,
                            align: 'right',
                           // verticalAlign: 'left', // 竖直对齐方式，默认是 center
                            inside: true
                        }
                    }
                },
                legend: {
                        borderWidth: 0
                },
                exporting: {
                        enabled: false
                },
                series: [{ name: '液位(m)',yAxis: 0,data:dd1}]
                });
        }
         
    })

    //加载水位
    function LoadWater1(isv){

       var watchtotal=parseFloat(sessionStorage.getItem('watchpa'));
        if(isv)
        {
            $('#fillgauge1').show();
        }
        else
        {
           $('#fillgauge1').hide();
        }
        var config1 = liquidFillGaugeDefaultSettings();
       // console.log(config1);
        config1.circleThickness = 0.1;
        config1.waveAnimateTime = 2000;
        //是否以百分比显示，JS中增加如不以百分比显示，那么单位为M，需要的话 可进行修改
        config1.displayPercent = false;
        config1.valueCountUp = false;
        // var gauge2= loadLiquidFillGauge("fillgauge1", 46.1, config1);
        //定义最大值、最小值即可实现显示数值
        config1.minValue=0.7;
        config1.maxValue=10 ;
        //根据最大值、最小值 当前值确定百分比 显示内容为Model.LastValue
        var gauge2= loadLiquidFillGauge("fillgauge1", watchtotal, config1);
    }
    //加载水压
    function LoadWater2(isv){
      var watchpa=parseFloat(sessionStorage.getItem('watchpa'));
        if(isv)
        {
            $('#container').show();
        }else{
            $('#container').hide();
        }
        var maxBand={  //范围颜色
            from:  70,
            to: 1000,
            color: '#DF5353' // red
        };
        $('#container').highcharts({
            chart: {
                type: 'gauge',  //类型
                plotBackgroundImage: null,  //绘图区背景图
                plotBorderWidth: 1,  //绘图区边框宽度
                plotShadow: false,  //绘图区阴影
            },
            title: {
                text: null
            },
            exporting: {   //导出表
                enabled:false
            },
            pane: {
                startAngle:-150,  //开始角度
                endAngle: 150,   //结束角度
                title: {
                    text: '我是标题'
                },
            },
            // the value axis
            yAxis: {
                min: 0,  //最小值
                max:  maxBand.to,  //最大值
                minorTickInterval: 'auto',     //设置是否出现纵向小标尺
                minorTickWidth: 1,    
                minorTickLength: 6,   //刻度线长度
                minorTickPosition: 'inside',     
                minorTickColor: '#666',    
                tickWidth: 2,    //设置X轴坐标点是否出现占位及其宽度
                tickPixelInterval: 50, //设置横坐标密度 
                tickPosition: 'inside',  //自定义位置
                tickLength: 10,  //自定义长度
                tickColor: '#666',
                labels: {   //轴坐标
                    step: 1,  //步进
                    rotation: 'auto'  //旋转角度
                },
                title: {
                    text: '水压<br/><span>  </span><br/><span style="font-size:8px;">kpa</span>',
                },
                plotBands: [{  //标识区
                    from: 0,
                    to: 2,
                    color: '#DF5353' // red
                }, {
                    from: 2,
                    to: 6,
                    color: '#55BF3B' // green
                }, maxBand]
            },
            series: [{
                name: '水压',
                data: [watchpa],
                tooltip: {
                    valueSuffix: 'kpa'  //数值后缀
                }
            }],
            plotOptions: {
                gauge: {
                    dial: {
                        backgroundColor: '#1D2528',
                        // 半径：指针长度
                        radius: '80%'
                    }
                }
            }
        });
    }
