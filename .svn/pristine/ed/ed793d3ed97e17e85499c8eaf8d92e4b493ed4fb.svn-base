html, body {
  width:100%;
  height:100%;
  font-family:'Microsoft YaHei';
}

.elecLeft
{
  position:absolute;
  top:10px;
  border:0px;
  right:300px;
  bottom:0px;
  width: 540px
}


.ComInfo
{
 border: solid 1px #fff;
  box-shadow:inset 0px 0px 30px #fff;
  color:#fff;
  border-radius:5px;
  padding:10px;
}
.textContent
{
  text-indent: 2em;
  font-size:14px;
  line-height:20px;
  font-weight: 500;
  font-family: "微软雅黑";

}
.textColor
{
  color:#d1d1d2;
  padding-left:5px;
  padding-right:5px;
  font-weight: normal;
}


.elecDeviceBox
{
  margin-top:10px;
 overflow:hidden;
}
.DeviceItem
{
  height:120px;
  width:120px;
  float:left;
  margin-left:20px;
  margin-top:10px;
     margin-bottom:10px;
  color:#ffffff;
  position:relative;
  text-align:center;
  line-height:130px;
  font-size:40px;
  cursor:pointer;
}

.DeviceStatus
{
  position:absolute;
  left:30px;
  top:30px;
  font-size:14px;
  line-height:20px;
}

