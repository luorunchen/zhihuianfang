.elecAlarmBox
{
  margin-top:150px;
  width:100%;
  height:320px;
 border: solid 1px #fff;
  box-shadow:inset 0px 0px 30px #fff;
  border-radius:7px;
}
.elecAlarmDoBox
{
  position:absolute;
  width:280px;
  top:10px;
  border:0px;
  right:10px;
  bottom:0px;
}
.ShowImgBox
{
  padding:10px;
  overflow:hidden;
}
.ShowImgBox img
{
  float:left;
  margin-left:10px;
}

.elecDoLog
{
  position:absolute;
  left:0px;
  right:0px;
  top:0px;
  bottom:150px;
  border:solid 1px #fff;
  border-radius:5px;
  color:#fff;
  overflow-y:auto;

}
.alarmDoItem
{
  border-bottom:solid 1px #5dacd3;

}

.alarmDoType
{
  height:30px;
  line-height:30px;
  padding-left:20px;
  background-color:#466a7c;

}

.alarmDoDevice
{
  line-height:20px;
  padding-left:20px;
}

.alarmDoText
{
  line-height:20px;
  padding-left:20px;
  padding-top:10px;
  padding-bottom:10px;
}


.elecDo
{
  position:absolute;
  left:0px;
  right:0px;
  bottom:0px;
  height:140px;
}

.elecDo textarea
{
  height:100px;
}
.doButs
{
  text-align:center;
